                    <a id="toProfile" class="list-group-item {{#if profile}} active {{/if}}" href="/account/profile"><i
                            class="fe-icon-user text-muted"></i>Hồ sơ</a>
                    <a id="toPassword" class="list-group-item {{#if password}} active {{/if}}"
                        href="/account/password"><i class="fe-icon-map-pin text-muted"></i>Mật khẩu</a>
                    <a id="toHistory" class="list-group-item" href="/account/history"><i
                            class="fe-icon-map-pin text-muted"></i>Lịch sử mua hàng</a>
                    {{!-- <a id="toFav" class="list-group-item" href=""><i class="fe-icon-map-pin text-muted"></i>Wishlist</a> --}}
